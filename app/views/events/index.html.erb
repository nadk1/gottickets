<div class="container">
  <div class="create-button">
    <%= link_to "Create new event", new_event_path, class: 'btn btn-primary'  %>
  </div>
  <div class="cards-container">
    <% @events.each do |event| %>
      <div class="h-90 p-5 text-white bg-dark rounded-3 my-4 d-flex col-12">
        <div class="col-6">
          <%= cl_image_tag event.photo.key, height: 225, crop: :fill %>
        </div>
        <div class="col-6">
          <h2><%= event.name %></h2>
          <p><%= event.description %></p>
          <p><%= event.location %></p>
          <%= link_to "View Event", event_path(event), class: "btn btn-outline-light" %>
        </div>
      </div>
    <% end %>
  </div>
<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
