<div class="container">
  <%= simple_form_for @event, url: events_path, method: :post do |f|  %>
    <%= f.input :name, label: "Event name:" %>
    <%= f.input :description, label: "Description:" %>
    <%= f.association :category, label: "Category:" %>
    <%= f.input :location, label: "Location:" %>
    <%= f.input :price, label: "Price:" %>
    <%= f.input :capacity, label: "Capacity:" %>
    <%= f.input :date, label: "Date:" %>
    <%= f.input :photo, as: :file %>

    <%= f.button :submit, value: 'Create event', class: "btn btn-primary" %>
  <% end %>
</div>
