
<div class="container col-8 justify-content-center my-5">
    <h2 class="pb-2 border-bottom my-5">Create your Event</h2>
  <%= simple_form_for @event, url: events_path, method: :post do |f|  %>
    <%= f.input :name, label: "Event name:" %>
    <%= f.input :description, label: "Description:" %>
    <%= f.association :category, label: "Category:" %>
    <%= f.input :location, label: "Location:",
                input_html: { data: { geocoder_target: "location" }, class: "d-none"  },
                wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
    <%= f.input :price, label: "Price:" %>
    <%= f.input :capacity, label: "Capacity:" %>
    <%= f.input :date, label: "Date:" %>
    <%= f.input :photo, as: :file %>

    <%= f.button :submit, value: 'Create event', class: "btn btn-primary"%>
  <% end %>
</div>
